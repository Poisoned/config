# script bash-simplyfying
alias ls='ls -aF'
alias ll='ls -l'
alias search=grep
alias flush='dscacheutil -flushcache'
alias hack='ping'
alias ..='cd ..'
alias ...='cd ../..'
alias ip='curl --silent checkip.dyndns.org | grep --extended-regexp --only-matching "[0-9\.]+"'
alias chrome='/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome'
alias be='bundle exec'
alias run='be foreman run'
alias tree='open -a SourceTree'
alias up='git-up'
alias cs='brew cask search'
alias ci='brew cask install'

# docker
alias dm='docker-machine'
alias dms='dm start'
alias dmp='dm stop'
alias dmst='dm status'
alias do='docker-compose'
alias dos='do start'
alias dop='do stop'
alias dod='do down'
alias dou='do up'
alias dost='do status'

# chore
alias brewski='mas outdated; mas upgrade; brew update; brew upgrade; brew cleanup; brew cask cleanup; brew doctor; brew cu'

# work
alias sspec='spring rspec'
alias robo='be rubocop'
